---
import type { IconName } from '@/lib/icons'
import Icon from '@/components/ui/Icon.astro'

interface Props {
  title: string
  description?: string
  icon?: IconName
}

const { title, description, icon }: Props = Astro.props
---

<article
  class="h-full rounded-xl border border-gray-200 bg-white p-6 transition-colors hover:border-blue-600"
>
  <header class="mb-2 flex items-center gap-2">
    {icon && <Icon name={icon} className="size-8" />}
    <h3 class="text-lg font-semibold">
      {title}
    </h3>
  </header>
  {description && <p class="mb-4 text-gray-600">{description}</p>}
  <slot />
</article>
