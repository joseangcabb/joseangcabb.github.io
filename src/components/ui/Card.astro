---
interface Props {
  title: string
  description?: string
}

const { title, description }: Props = Astro.props
---

<article
  class="h-full rounded-xl border border-gray-200 bg-white p-6 hover:border-blue-600"
>
  <header class="flex flex-col gap-y-3">
    <h3 class="text-lg font-semibold">{title}</h3>
  </header>
  {description && <p class="mb-4 text-gray-600">{description}</p>}
  <slot />
</article>
