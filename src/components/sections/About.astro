---
import type { SocialLink } from '@/types/profile'
import Icon from '@/components/ui/Icon.astro'

interface Props {
  jobTitle: string
  seniority?: string
  focusArea?: string
  summary: string
  socialLinks?: SocialLink[]
}

const { jobTitle, seniority, focusArea, summary, socialLinks = [] } = Astro.props
---

<h1 class="text-5xl leading-tight font-black tracking-tight">
  {seniority && <span>{seniority} </span>}
  {
    focusArea && (
      <span class="mr-1 bg-gradient-to-r from-blue-600 to-slate-600 bg-clip-text text-transparent">
        {focusArea}
      </span>
    )
  }
  <span>{jobTitle}</span>
</h1>

<p class="mt-6 text-lg leading-relaxed text-gray-600">
  {summary}
</p>

{
  socialLinks.length > 0 && (
    <nav aria-label="Redes sociales" class="mt-8">
      <ul class="flex flex-wrap gap-3">
        {socialLinks.map(({ url, icon, name }) => (
          <li>
            <a
              href={url}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center gap-2 rounded-lg bg-gray-100 px-4 py-3 text-base font-medium text-gray-900 transition hover:bg-gray-200 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600"
            >
              <Icon name={icon} className="size-6 text-slate-700" />
              <span>{name}</span>
            </a>
          </li>
        ))}
      </ul>
    </nav>
  )
}
