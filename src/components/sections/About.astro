---
import type { SocialLink } from '@/types/site'
import Icon from '@/components/ui/Icon.astro'

interface Props {
  jobTitle: string
  seniority?: string
  focusArea?: string
  summary: string
  socialLinks?: SocialLink[]
}

const { jobTitle, seniority, focusArea, summary, socialLinks } = Astro.props as Props
---

<section class="pt-28 pb-48">
  <div class="container mx-auto flex justify-center gap-x-10">
    <div class="flex w-2/3 flex-col justify-center">
      <h1 class="text-5xl font-black tracking-tight">
        {seniority}
        {
          focusArea && (
            <span class="bg-gradient-to-r from-blue-600 to-slate-600 bg-clip-text text-transparent">
              {focusArea}
            </span>
          )
        }
        {jobTitle}
      </h1>
      <p class="mt-4 text-lg text-gray-600">
        {summary}
      </p>
      <div class="mt-8 flex gap-x-2">
        {
          socialLinks &&
            socialLinks.map((item) => {
              return (
                <a
                  href={item.url}
                  class="flex items-center gap-2 rounded-lg bg-gray-100 px-4 py-3 text-lg font-semibold text-gray-900 hover:bg-gray-200"
                >
                  <Icon name={item.icon} className="size-6 text-slate-600" />
                  {item.name}
                </a>
              )
            })
        }
      </div>
    </div>
  </div>
</section>
