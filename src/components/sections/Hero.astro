---
import type { SocialLink } from '@/types/profile'
import Icon from '@/components/ui/Icon.astro'

interface Props {
  name: string
  jobTitle: string
  seniority?: string
  focusArea?: string
  summary: string
  socialLinks?: SocialLink[]
}

const { name, jobTitle, seniority, focusArea, summary, socialLinks = [] } = Astro.props
---

<section id="home" class="flex min-h-screen items-center justify-center px-6">
  <div class="w-full max-w-4xl space-y-8 text-center">
    <div class="space-y-3">
      <p
        class="text-xs font-semibold tracking-[0.3em] text-slate-500 uppercase sm:text-sm"
      >
        Hello, I'm {name}
      </p>

      <h1
        class="text-4xl leading-tight font-black tracking-tight text-slate-900 sm:text-5xl lg:text-6xl"
      >
        {seniority && <span>{seniority} </span>}
        {
          focusArea && (
            <span class="mr-1 font-semibold text-slate-700">{focusArea}</span>
          )
        }
        <span>{jobTitle}</span>
      </h1>

      <p class="mt-6 text-base leading-relaxed text-gray-600 sm:text-lg">
        {summary}
      </p>
    </div>

    {
      socialLinks.length > 0 && (
        <nav aria-label="social networks">
          <ul class="flex flex-wrap justify-center gap-3">
            {socialLinks.map(({ url, icon, name }) => (
              <li>
                <a
                  href={url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center gap-2 rounded-lg bg-gray-100 px-4 py-3 text-sm font-medium text-gray-900 transition hover:bg-gray-200 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 sm:text-base"
                >
                  <Icon name={icon} className="size-5 text-slate-700" />
                  <span>{name}</span>
                </a>
              </li>
            ))}
          </ul>
        </nav>
      )
    }

    <div class="mt-10 flex justify-center">
      <div class="relative h-10 w-6 rounded-full border-2 border-slate-400/60">
        <div
          class="wheel animate-wheel absolute top-2 left-1/2 h-2 w-1 -translate-x-1/2 rounded-full bg-slate-400/80"
        >
        </div>
      </div>
    </div>
  </div>
</section>
