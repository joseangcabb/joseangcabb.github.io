---
import { profileConfig } from '@/config/profile'
import { siteConfig } from '@/config/site'
import SiteLayout from '@/layouts/SiteLayout.astro'
import Section from '@/components/layout/Section.astro'

import About from '@/components/sections/About.astro'
import Skills from '@/components/sections/Skills.astro'
import Experiences from '@/components/sections/Experiences.astro'
import Projects from '@/components/sections/Projects.astro'
---

<SiteLayout>
  <Section>
    <About {...profileConfig} />
  </Section>

  <Section
    title={siteConfig.sections.skills.title}
    description={siteConfig.sections.skills.description}
  >
    <Skills skills={profileConfig.skills} />
  </Section>

  <Section
    title={siteConfig.sections.experiences.title}
    description={siteConfig.sections.experiences.description}
  >
    <Experiences experiences={profileConfig.experiences} />
  </Section>

  <Section
    title={siteConfig.sections.projects.title}
    description={siteConfig.sections.projects.description}
  >
    <Projects projects={profileConfig.projects} />
  </Section>
</SiteLayout>
