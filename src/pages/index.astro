---
import { profileConfig } from '@/config/profile'
import { siteConfig } from '@/config/site'
import SiteLayout from '@/layouts/SiteLayout.astro'
import Section from '@/components/layout/Section.astro'

import Hero from '@/components/sections/Hero.astro'
import Skills from '@/components/sections/Skills.astro'
import Experiences from '@/components/sections/Experiences.astro'
import Projects from '@/components/sections/Projects.astro'
---

<SiteLayout>
  <Hero {...profileConfig} />

  <Section {...siteConfig.sections.skills}>
    <Skills skills={profileConfig.skills} />
  </Section>

  <Section {...siteConfig.sections.experiences}>
    <Experiences experiences={profileConfig.experiences} />
  </Section>

  <Section {...siteConfig.sections.projects}>
    <Projects projects={profileConfig.projects} />
  </Section>
</SiteLayout>
